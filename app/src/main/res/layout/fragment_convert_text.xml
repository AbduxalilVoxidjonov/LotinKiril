<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConvertText">

    <EditText
        android:id="@+id/editTextConvert"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        android:background="@drawable/rectangle"
        android:gravity="top"
        android:hint="Matnni kiriting"
        android:maxLines="300"
        android:padding="8dp"
        android:scrollbarSize="0dp"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,MissingConstraints,TextFields" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changeText"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/button"
        android:clickable="true"
        android:focusable="true"
        android:text="O'zgartirish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextConvert"
        tools:ignore="MissingConstraints" />

    <TextView
        android:textIsSelectable="true"
        android:id="@+id/textViewConvert"
        android:layout_margin="15dp"
        android:background="@drawable/rectangle"
        android:maxLines="300"
        android:padding="8dp"
        android:scrollbarSize="0dp"
        android:scrollbars="vertical"
        android:textAlignment="textStart"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changeText"
        tools:ignore="Deprecated"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>